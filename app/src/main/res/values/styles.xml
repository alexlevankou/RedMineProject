<?xml version="1.0" encoding="utf-8"?>

<resources>

     <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />

     <style name="RedTheme" parent="AppTheme">
         <item name="colorPrimary">@color/colorPrimary</item>
         <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
         <item name="colorControlNormal">@color/colorWhite</item>
         <item name="colorAccent">@color/colorAccent</item>
     </style>

    <style name="Theme.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HeadLineFont" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">32dp</item>
    </style>

    <style name="SubHeadFont" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextFont" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="TabFont" parent="Base.TextAppearance.AppCompat.Body2">
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:background">@drawable/tab_ripple</item>
    </style>

    <style name="TabSize">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="TableRowSize" >
        <item name="android:paddingBottom">20dp</item>
    </style>

</resources>
